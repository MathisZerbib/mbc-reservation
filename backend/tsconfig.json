{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2022",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node"]
    },
    "exclude": [
        "node_modules",
        "dist",
        "prisma.config.ts",
        "src/types/**/*.ts"
    ]
}