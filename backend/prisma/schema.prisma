generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model Table {
  id        Int       @id @default(autoincrement())
  name      String    @unique // e.g. "1", "10", "BAR-40"
  capacity  Int
  type      TableType @default(RECTANGULAR)
  x         Float?    // Coordinate for visual map (optional, can be hardcoded in frontend too)
  y         Float?
  bookings  Booking[] @relation("BookingTables")
}

model Booking {
  id        String   @id @default(uuid())
  guestName String
  guestPhone String?
  guestEmail String?
  language  String?  // e.g. 'fr', 'en', 'it', 'es', 'ru', etc.
  size      Int
  startTime DateTime
  endTime   DateTime
  status    BookingStatus @default(CONFIRMED)
  tables    Table[]  @relation("BookingTables")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TableType {
  RECTANGULAR
  OCTAGONAL
  CAPSULE
  ROUND
  BAR
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}
